{
    "name": "justinrainbow/json-schema",
    "type": "library",
    "description": "A library to validate a json schema.",
    "keywords": [
        "json",
        "schema"
    ],
    "homepage": "https://github.com/jsonrainbow/json-schema",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Prieto Reis",
            "email": "bruno.p.reis@gmail.com"
        },
        {
            "name": "Justin Rainbow",
            "email": "justin.rainbow@gmail.com"
        },
        {
            "name": "Igor Wiedler",
            "email": "igor@wiedler.ch"
        },
        {
            "name": "Robert Sch√∂nthal",
            "email": "seroscho@googlemail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "marc-mabe/php-enum":"^4.0",
        "icecave/parity": "^3.0"
    },
    "require-dev": {
        "json-schema/json-schema-test-suite": "1.2.0",
        "phpunit/phpunit": "^8.5",
        "phpspec/prophecy": "^1.19"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "JsonSchema\\": "src/JsonSchema/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JsonSchema\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "json-schema/json-schema-test-suite",
                "version": "1.2.0",
                "source": {
                    "type": "git",
                    "url": "https://github.com/json-schema/JSON-Schema-Test-Suite",
                    "reference": "1.2.0"
                }
            }
        }
    ],
    "bin": [
        "bin/validate-json"
    ],
    "scripts": {
        "coverage": "phpunit --coverage-text",
        "style-check": "tools/vendor/bin/php-cs-fixer fix --dry-run --verbose --diff",
        "style-fix": "tools/vendor/bin/php-cs-fixer fix --verbose",
        "test": "phpunit",
        "testOnly": "phpunit --colors --filter",
        "phpstan": "tools/vendor/bin/phpstan",
        "phpstan-generate-baseline": "tools/vendor/bin/phpstan --generate-baseline"
    }
}
