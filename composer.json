{
    "name": "justinrainbow/json-schema",
    "type": "library",
    "description": "A library to validate a json schema.",
    "keywords": [
        "json",
        "schema"
    ],
    "homepage": "https://github.com/justinrainbow/json-schema",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Prieto Reis",
            "email": "bruno.p.reis@gmail.com"
        },
        {
            "name": "Justin Rainbow",
            "email": "justin.rainbow@gmail.com"
        },
        {
            "name": "Igor Wiedler",
            "email": "igor@wiedler.ch"
        },
        {
            "name": "Robert SchÃ¶nthal",
            "email": "seroscho@googlemail.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "marc-mabe/php-enum":"^2.0 || ^3.0 || ^4.0",
        "icecave/parity": ">=1.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.2.20 || ~2.19.0",
        "json-schema/json-schema-test-suite": "1.2.0",
        "phpunit/phpunit": "^4.8.36 || ^5.7.27 || ^6.5.14 || ^7.5.20 || ^8.5.29 || ^9.5.24",
        "sanmai/phpunit-legacy-adapter": "^6.4 || ^8.2.1",
        "phpspec/prophecy-phpunit": "^1.1 || ^2.0.1"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "JsonSchema\\": "src/JsonSchema/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JsonSchema\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "json-schema/json-schema-test-suite",
                "version": "1.2.0",
                "source": {
                    "type": "git",
                    "url": "https://github.com/json-schema/JSON-Schema-Test-Suite",
                    "reference": "1.2.0"
                }
            }
        }
    ],
    "bin": [
        "bin/validate-json"
    ],
    "scripts": {
        "coverage": "vendor/bin/phpunit --coverage-text",
        "style-check": "php-cs-fixer fix --dry-run --verbose --diff",
        "style-fix": "php-cs-fixer fix --verbose",
        "test": "vendor/bin/phpunit",
        "testOnly": "vendor/bin/phpunit --colors --filter"
    }
}
